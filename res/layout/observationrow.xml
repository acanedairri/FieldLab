<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:background="@drawable/bar_gray" android:gravity="left" android:layout_height="wrap_content" android:layout_marginLeft="5dp">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="wrap_content">
        <TableLayout android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_marginLeft="5dp">
                <TextView android:text="00001" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:layout_height="wrap_content" android:id="@+id/txtsbarcode" android:width="200px" android:textStyle="bold"></TextView>
                <TextView android:text="vcode" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:layout_height="wrap_content" android:id="@+id/txtvcode" android:width="150px" android:layout_marginLeft="10dp"></TextView>
                <TextView android:textSize="20dp" android:textColor="#000000" android:layout_height="wrap_content" android:id="@+id/txtvvalue" android:layout_marginLeft="10dp" android:layout_width="match_parent"></TextView>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtValueEdit" android:width="100px" android:visibility="gone" android:textSize="17dp">
                    <requestFocus></requestFocus>
                </EditText>
            </TableRow>
        </TableLayout>
        <TableLayout android:id="@+id/tableLayout2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="5dp">
            <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow3" android:layout_width="wrap_content">
                <TextView android:text="dataref" android:layout_width="wrap_content" android:textSize="15dp" android:textColor="#000000" android:layout_height="wrap_content" android:id="@+id/txtsdataref" android:width="300px"></TextView>
                <TextView android:textSize="15dp" android:textColor="#000000" android:layout_height="wrap_content" android:id="@+id/txtremarks" android:layout_width="wrap_content" android:gravity="left" android:width="300px"></TextView>
                <EditText android:inputType="textMultiLine" android:layout_height="wrap_content" android:id="@+id/editTextRemarks" android:lines="2" android:minWidth="280px" android:layout_width="match_parent" android:visibility="gone" android:layout_gravity="fill_vertical"></EditText>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    
</RelativeLayout>
